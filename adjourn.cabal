-- Initial adjourn.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

-- The name of the package.
name:                adjourn

-- The package version.  See the Haskell package versioning policy (PVP) 
-- for standards guiding when and how versions should be incremented.
-- http://www.haskell.org/haskellwiki/Package_versioning_policy
-- PVP summary:      +-+------- breaking API changes
--                   | | +----- non-breaking API additions
--                   | | | +--- code changes with no API change
version:             0.1.0.0

-- A short (one-line) description of the package.
-- synopsis:            

-- A longer description of the package.
-- description:         

-- The license under which the package is released.
license:             BSD3

-- The file containing the license text.
license-file:        LICENSE

-- The package author(s).
author:              timds

-- An email address to which users can send suggestions, bug reports, and patches.
maintainer:          tim.stapels@icloud.com

-- A copyright notice.
-- copyright:           

-- category:            

build-type:          Simple

-- Extra files to be distributed with the package, such as examples or a README.
-- extra-source-files:  

-- Constraint on the version of Cabal needed to build this package.
cabal-version:       >=1.10

data-files: example.txt

flag debug
  description: Enable debug logging
  default:     False

executable adjourn
  -- .hs or .lhs file containing the Main module.
  main-is:             Main.hs

  if flag(debug)
    cpp-options:  -D__DEBUG__
  
  -- Modules included in this executable, other than Main.
  other-modules:       Adjourn.Parse, Adjourn.Debug

  build-depends:       base >=4.6 && <5, containers, time, attoparsec,
                       text, mtl, hscurses >= 1.4

  hs-source-dirs: src

  default-language:    Haskell2010

